<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/order_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_order_background"
            android:foreground="@color/tranparentBlack"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yaha Sab Milta Hai"
            android:textSize="20sp"
            android:fontFamily="@font/muli_bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/subproduct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User App"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_below="@id/order_name"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/textview_bg"
            android:elevation="5dp"
            android:visibility="gone"
            android:fontFamily="@font/slabo_13px"
            android:paddingStart="15dp"
            android:paddingTop="5dp"
            android:paddingEnd="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>