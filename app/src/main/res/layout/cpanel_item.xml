<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="70dp"
        android:background="@color/darkBlue"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_cpanel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_cpanel" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/lightestSkyBlue"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/domain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="sikarwarsoftwares.com"
            style="@style/MediumTextBold"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/txt_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client: "
            style="@style/RegularText"
            android:layout_below="@+id/domain_name"
            />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surya Pratap Singh"
            style="@style/RegularText"
            android:layout_below="@id/domain_name"
            android:layout_toEndOf="@id/txt_client"
            android:fontFamily="@font/muli_semibold"
            />
        <TextView
            android:id="@+id/created_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Created On: 12 Jan 2021"
            style="@style/RegularText"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            />
    </RelativeLayout>
</LinearLayout>