{
  "endpoint" : "webapps" ,
  "method" : "POST",
  "title" : "Create User App",
  "minimumVersionCode" : 2,
  "schema": [
    {
      "type" : "textview",
      "size" : "20",
      "text" : "Customer App",
      "gravity" : "center"
    } ,
    {
      "type" : "enum",
      "values" : ["dokan" , "wcfm"],
      "text" : "Select Vendor Plugin Used",
      "value" : "dokan",
      "id" : "type"
    },
    {
      "type" : "constant",
      "id" : "name",
      "value" : "Surya Pratap"
    },
    {
      "type" : "boolean",
      "text" : "Refunds/Cancel",
      "default" : true,
      "id" : "isRefund"
    },
    {
      "type" : "edittext",
      "hint" : "App Name",
      "id" : "appname",
      "disable" : true,
      "value" : "Surya Thakur",
      "regex" : "^([a-zA-Z0-9_\\s])+$",
      "minLength" : 6,
      "maxLength" : 16,
      "isRequired" : true
    } ,
    {
      "type" : "button" ,
      "action" : "pickImage" ,
      "mime" : "image/png",
      "text" : "Pick App Icon" ,
      "isRequired" : true,
      "id" : "icon"
    },
    {
      "type" : "button" ,
      "action" : "pickImage" ,
      "mime" : "image/png",
      "dimension" : "3000x800",
      "text" : "Pick App Icon" ,
      "isRequired" : true,
      "id" : "icon2"
    },
    {
      "type" : "button" ,
      "action" : "pick" ,
      "extension" : "json",
      "mime" : "*/*",
      "text" : "Pick Google JSon" ,
      "isRequired" : true,
      "id" : "googleJson"
    },
    {
      "type" : "relation",
      "endpoint" : "products",
      "text" : "Select Product",
      "id" : "product",
      "isRequired": true,
      "value" : 2
    },
    {
      "type": "relation",
      "endpoint" : "cpanels",
      "text": "Select Cpanel",
      "id" : "cpanel",
      "isRequired" : true
    },
    {
      "type" : "button" ,
      "action" : "submit" ,
      "text" : "Build App" ,
      "id" : "submit",
      "disabled" : true
    }
  ]
}